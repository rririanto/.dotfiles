[gpg]
	program = gpg
    path = .gitconfig-work
[rerere]
	enabled = true
[alias]
  # you need install vim-conflicted
	conflicted = !vim +Conflicted
  # use for resolve conflicted
  accept-ours = "!f() { git checkout --ours -- \"${@:-.}\"; git add -u \"${@:-.}\"; }; f"
  accept-theirs = "!f() { git checkout --theirs -- \"${@:-.}\"; git add -u \"${@:-.}\"; }; f"
[commit]
	gpgsign = true
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[difftool]
	prompt = false
[pull]
	ff = only
[url "git@gitlab.com:"]
  insteadOf = https://gitlab.com/ 
